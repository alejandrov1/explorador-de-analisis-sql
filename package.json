{
  "name": "explorador-de-analisis-sql",
  "version": "1.0.0",
  "main": "main.js",
  "author": "Alejandro Valdez PÃ©rez",
  "description": "Explorador de Analisis SQL con IA",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.analisissql.app",
    "productName": "Explorador Analisis SQL",
    "win": {
      "target": "nsis",
      "icon": "src/favicon.ico"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/app/**/*",
      "server/**/*",
      "main.js",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@google/generative-ai": "^0.24.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mssql": "^10.0.1",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.0",
    "@angular/cli": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "typescript": "~5.5.4"
  }
}